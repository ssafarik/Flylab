<launch>
	<!-- ========================================================== -->
	<!-- This experiment hits the fly when fly performs a range     -->
    <!-- of velocity.                                               -->
    <!--                                                            -->
    <!-- Launch this file to run the experiment, as in:             -->
    <!-- roslaunch experiments zapvelocity.launch                   -->
    <!--                                                            -->
	<!-- ========================================================== -->

	<!-- ***  Core stuff  *** -->
	<include file="$(find flycore)/launch/flycore.launch" />
	
    <!-- ***  Hardware  *** -->
    <include file="$(find config)/launch/hardware.launch" />

	<!-- ***  The Experiment  *** -->
	<node pkg="experiments" type="ZapVelocity.py" name="Experiment" required="true" />

	
  
</launch>
