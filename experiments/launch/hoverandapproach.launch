<launch>
    <!-- ========================================================== -->
    <!-- Configuration of the HoverAndApproach experiment.          -->
    <!--                                                            -->
    <!-- Launch this file to run the experiment, as in:             -->
    <!-- roslaunch experiments hoverandapproach.launch              -->
    <!--                                                            -->
	<!-- ========================================================== -->

	<!-- ***  Core stuff  *** -->
	<include file="$(find flycore)/launch/flycore.launch" />
	
    <!-- ***  Hardware  *** -->
    <include file="$(find config)/launch/hardware.launch" />

	<!-- ***  The Experiment  *** -->
	<node pkg="experiments" type="HoverAndApproach.py" name="Experiment" required="true" />
  
</launch>
