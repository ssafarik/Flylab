<launch>
    <!-- ========================================================== -->
    <!-- Replay a .bag file for tracking purposes.                  -->
    <!--                                                            -->
    <!-- Launch this file to rewrite a .csv file from a .bag file:  -->
    <!-- roslaunch experiments retrack.launch                       -->
    <!--                                                            -->
    <!-- ========================================================== -->

    <param name="use_sim_time"                 type="bool" value="true"/>
    
    <!-- ***  Core stuff  *** -->
    <include file="$(find flycore)/launch/main.launch" />

    <node name="reconfigure_gui" pkg="dynamic_reconfigure" type="reconfigure_gui" />

    

    <!-- STEP 1:  Edit Retrack.py for the number of robots & flies.  -->
    <node pkg="experiments" type="Retrack.py" name="Experiment" required="true" />
  

    <!-- STEP 2:  Edit the following lines to show the hardware you recorded the .bag file upon. -->
    <include file="$(find racetrack)/launch/params_tracking.launch" />
    <include file="$(find racetrack)/launch/params_calibration.launch" />
	<include file="$(find flybowls)/launch/heatbowl_50mm.launch" />


    <!-- STEP 3:  Edit the following lines to play the appropriate .bag file. -->
    <include file="$(find flappy)/launch/input_bag.launch" >
        <arg name="bagfiles" value="/home/ssafarik/test.bag" /> 
    </include> 

        

    
     

	
</launch>
	
	
